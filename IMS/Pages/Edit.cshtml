@page
@model IMS.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.Id" />
            <div class="form-group">
                <label asp-for="Item.Type" class="control-label"></label>
                <input asp-for="Item.Type" class="form-control" />
                <span asp-validation-for="Item.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Brand" class="control-label"></label>
                <input asp-for="Item.Brand" class="form-control" />
                <span asp-validation-for="Item.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Status" class="control-label"></label>
                <input asp-for="Item.Status" class="form-control" />
                <span asp-validation-for="Item.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.YearModel" class="control-label"></label>
                <input asp-for="Item.YearModel" class="form-control" />
                <span asp-validation-for="Item.YearModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Info" class="control-label"></label>
                <input asp-for="Item.Info" class="form-control" />
                <span asp-validation-for="Item.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> 
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-sm btn-primary" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
